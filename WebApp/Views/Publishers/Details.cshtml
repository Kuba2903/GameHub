@model IQueryable<string>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>@ViewBag.PublisherName</h2>
            <p>@ViewBag.Stock</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-8">
            @foreach (var game in Model)
            {
                <div class="mb-3">
                    <h5>@game</h5>
                </div>
            }
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    Tools
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm" title="Back to List">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
