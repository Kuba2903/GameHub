@model IEnumerable<PlatformVm>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tools</th>
            <th>
                Platform
                <a href="@Url.Action("Index", new { sortOrder = ViewBag.PlatformSortParm })">
                    <i class="bi bi-arrow-down-up"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var platform in Model)
        {
            @if (!string.IsNullOrEmpty(platform.Name))
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", new { id = platform.Id })" class="btn btn-primary btn-sm" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a href="@Url.Action("Details", new { id = platform.Id })" class="btn btn-info btn-sm" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = platform.Id })" class="btn btn-danger btn-sm" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                    <td>@platform.Name</td>
                </tr>
            }
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary btn-sm" title="Create">
    Create
</a>